rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profile rules
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Business profile rules
    match /businesses/{businessId} {
      allow read, write: if request.auth != null && request.auth.uid == businessId;
      allow read, write, update, delete: if request.auth != null &&
    exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admins collection (read-only access for checking admin status)
    match /admins/{adminId} {
      allow get: if request.auth != null && request.auth.uid == adminId;
    }

    // Stints collection
    match /stints/{stintId} {
      allow read: if true; // Anyone can read stints
      allow write: if request.auth != null;
    }

    // Application collection
    match /applications/{appId} {
  // Allow applicant to read/update/delete their own application
  allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;

  // Allow creating a new application if the user is the one applying
  allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

  // Allow businesses to read/update/delete applications to their own stints
  allow read, update, delete: if request.auth != null &&
    get(/databases/$(database)/documents/stints/$(resource.data.stintId)).data.businessId == request.auth.uid;
}


  }
}
